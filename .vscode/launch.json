    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Startup",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}",
            "env": {
                "FLASK_APP": "startup.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port=3000"
            ],
            "jinja": true,
            "justMyCode": false
        }
    ]
}